{
  "compilerOptions": {
    "types": [],
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "dist",
    "lib": [
      "es6",
      "dom",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020"
    ],
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "extendedDiagnostics": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
